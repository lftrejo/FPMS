<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Manage Flight Plans"
        android:id="@+id/manageFlightPlansTitle"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1.02">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp">

            <Space
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Name"
                android:id="@+id/textView2"
                android:layout_column="1"
                android:textStyle="bold"
                android:textSize="11dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Date of Flight"
                android:id="@+id/textView4"
                android:layout_column="2"
                android:textStyle="bold"
                android:textSize="11dp"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="81dp"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Departure Point-Destination"
                android:id="@+id/txtAltitude"
                android:layout_column="3"
                android:textStyle="bold"
                android:textSize="11dp"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Departure Time"
                android:id="@+id/textView8"
                android:layout_column="4"
                android:textStyle="bold"
                android:textSize="11dp"
                android:layout_marginLeft="20dp" />

            <Space
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_column="5"
                android:layout_marginLeft="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffcbcbcb">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox2"
                android:layout_column="0"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Flight-01"
                android:id="@+id/textView10"
                android:layout_column="1"
                android:textSize="11dp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03/25/2015"
                android:id="@+id/textView11"
                android:layout_column="2"
                android:textSize="11dp"
                android:textStyle="italic"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="ELP - LAX"
                android:id="@+id/txtETA"
                android:layout_column="3"
                android:textStyle="italic"
                android:textSize="11dp"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="14:52"
                android:id="@+id/textView13"
                android:layout_column="4"
                android:textStyle="italic"
                android:textSize="11dp"
                android:layout_marginLeft="20dp" />

            <Button
                android:layout_width="56dp"
                android:layout_height="40dp"
                android:text="View Details"
                android:id="@+id/button4"
                android:layout_column="5"
                android:textSize="8dp"
                android:layout_gravity="center" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox4"
                android:layout_column="0"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Flight-02"
                android:id="@+id/textView14"
                android:layout_column="1"
                android:textSize="11dp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03/29/2015"
                android:id="@+id/textView15"
                android:layout_column="2"
                android:textSize="11dp"
                android:textStyle="italic"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="LAX - SAT"
                android:id="@+id/textView16"
                android:layout_column="3"
                android:textStyle="italic"
                android:textSize="11dp"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="10:09"
                android:id="@+id/textView17"
                android:layout_column="4"
                android:textStyle="italic"
                android:textSize="11dp"
                android:layout_marginLeft="20dp" />

            <Button
                android:layout_width="56dp"
                android:layout_height="40dp"
                android:text="View Details"
                android:id="@+id/button5"
                android:layout_column="5"
                android:textSize="8dp"
                android:layout_gravity="center" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffcbcbcb">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox3"
                android:layout_column="0"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Flight-03"
                android:id="@+id/textView79"
                android:layout_column="1"
                android:textSize="11dp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03/30/2015"
                android:id="@+id/textView80"
                android:layout_column="2"
                android:textSize="11dp"
                android:textStyle="italic"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="SAT - AUS"
                android:id="@+id/textView81"
                android:layout_column="3"
                android:textStyle="italic"
                android:textSize="11dp"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="17:35"
                android:id="@+id/textView82"
                android:layout_column="4"
                android:textStyle="italic"
                android:textSize="11dp"
                android:layout_marginLeft="20dp" />

            <Button
                android:layout_width="56dp"
                android:layout_height="40dp"
                android:text="View Details"
                android:id="@+id/button9"
                android:layout_column="5"
                android:textSize="8dp"
                android:layout_gravity="center" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Home"
            android:id="@+id/buttonHome"
            android:background="#ff585858"
            android:textColor="#ffcbcbcb" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:id="@+id/buttonEdit"
            android:textColor="#ffcbcbcb"
            android:background="#ff585858" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:id="@+id/buttonDelete"
            android:textColor="#ffcbcbcb"
            android:background="#ff585858" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/button10"
            android:textColor="#ffcbcbcb"
            android:background="#ff585858" />
    </LinearLayout>
</LinearLayout>