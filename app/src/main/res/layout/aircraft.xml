<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Aircraft"
        android:id="@+id/aircraftTitle"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1.00" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp" >

            <Space
                android:layout_width="30dp"
                android:layout_height="15dp"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Name"
                android:id="@+id/textView18"
                android:layout_column="1"
                android:textStyle="bold"
                android:textSize="11dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Aircraft ID"
                android:id="@+id/textView19"
                android:layout_column="2"
                android:textStyle="bold"
                android:textSize="11dp"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Aircraft Model"
                android:id="@+id/textView20"
                android:layout_column="3"
                android:textStyle="bold"
                android:textSize="11dp"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Aircraft Color"
                android:id="@+id/textView21"
                android:layout_column="4"
                android:textStyle="bold"
                android:textSize="11dp"
                android:layout_marginLeft="20dp" />

            <Space
                android:layout_width="30dp"
                android:layout_height="15dp"
                android:layout_column="5"
                android:layout_marginLeft="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffcbcbcb">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox5"
                android:layout_column="0"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Avenger"
                android:id="@+id/textView22"
                android:layout_column="1"
                android:textSize="11dp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N283JM"
                android:id="@+id/textView23"
                android:layout_column="2"
                android:textSize="11dp"
                android:textStyle="italic"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Boeing C-75"
                android:id="@+id/textView24"
                android:layout_column="3"
                android:textStyle="italic"
                android:textSize="11dp"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="White"
                android:id="@+id/textView25"
                android:layout_column="4"
                android:textStyle="italic"
                android:textSize="11dp"
                android:layout_marginLeft="20dp" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox6"
                android:layout_column="0"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Duck"
                android:id="@+id/textView26"
                android:layout_column="1"
                android:textSize="11dp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Z927CC"
                android:id="@+id/textView27"
                android:layout_column="2"
                android:textSize="11dp"
                android:textStyle="italic"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Bell P-39"
                android:id="@+id/textView28"
                android:layout_column="3"
                android:textStyle="italic"
                android:textSize="11dp"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Black"
                android:id="@+id/textView29"
                android:layout_column="4"
                android:textStyle="italic"
                android:textSize="11dp"
                android:layout_marginLeft="20dp" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffcbcbcb">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox"
                android:layout_column="0"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Bolo"
                android:id="@+id/textView75"
                android:layout_column="1"
                android:textSize="11dp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BA328CN"
                android:id="@+id/textView76"
                android:layout_column="2"
                android:textSize="11dp"
                android:textStyle="italic"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Bell P-39"
                android:id="@+id/textView77"
                android:layout_column="3"
                android:textStyle="italic"
                android:textSize="11dp"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Blue"
                android:id="@+id/textView78"
                android:layout_column="4"
                android:textStyle="italic"
                android:textSize="11dp"
                android:layout_marginLeft="20dp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <Button
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:text="Home"
            android:id="@+id/button18"
            android:background="#ff585858"
            android:textColor="#ffcbcbcb" />

        <Button
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:text="Add"
            android:id="@+id/button19"
            android:textColor="#ffcbcbcb"
            android:background="#ff585858" />

        <Button
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:id="@+id/button20"
            android:textColor="#ffcbcbcb"
            android:background="#ff585858" />

        <Button
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:id="@+id/button21"
            android:textColor="#ffcbcbcb"
            android:background="#ff585858" />

        <Button
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/button22"
            android:textColor="#ffcbcbcb"
            android:background="#ff585858" />

    </LinearLayout>

</LinearLayout>